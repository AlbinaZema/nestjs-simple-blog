{
  "name": "nestjs-graphql-serverless",
  "version": "1.0.0",
  "description": "Simple blog backend application created with usage of the NestJS, GraphQl and deployed with Serverless",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "start:sls": "sls offline start",
    "deploy": "sls deploy --verbose",
    "list": "sls info",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "NODE_ENV=development jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docks": "npx @compodoc/compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@apollo/gateway": "^2.4.12",
    "@nestjs/apollo": "^10.1.7",
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/graphql": "^10.0.5",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^7.2.3",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/serve-static": "^2.1.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.16.0",
    "@types/ioredis": "^4.19.4",
    "@types/node": "^14.14.31",
    "@types/sanitize-html": "^1.27.1",
    "@vendia/serverless-express": "^4.10.4",
    "apollo-server-express": "^3.11.1",
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "bcryptjs": "^2.4.3",
    "bson": "4.7.2",
    "class-transformer": "^0.2.2",
    "class-validator": "^0.9.1",
    "config": "^1.21.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.1",
    "ioredis": "^4.22.0",
    "mongoose": "^5.11.14",
    "nestjs-implicit-query-params": "^1.0.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "sanitize-html": "^1.27.1",
    "ts-node": "^7.0.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/testing": "^7.6.12",
    "@types/jest": "^23.3.13",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "serverless": "^3.34.0",
    "serverless-offline": "^12.0.4",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
